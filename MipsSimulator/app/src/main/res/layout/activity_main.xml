<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.sucide.mips.mipssimulator.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_margin="5dp">

       <Spinner
           android:id="@+id/instruction_type_spinner"
           android:layout_width="270dp"
           android:layout_height="match_parent"
           android:layout_gravity="left"
           android:layout_margin="5dp"
           android:layout_marginTop="10dp">

       </Spinner>

       <Button
           android:text="add"
           android:onClick="add_instruction_button"
           android:layout_width="75dp"
           android:layout_height="35dp"
           />

   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:id="@+id/r_type_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/r_op"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="Operation"/>
        <EditText
            android:id="@+id/r_rd"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="RD"/>

        <EditText
            android:id="@+id/r_rs"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="RS"/>

        <EditText
            android:id="@+id/r_rt"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="RT"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/i_type_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <EditText
            android:id="@+id/i_op"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="Operation"/>

        <EditText
            android:id="@+id/i_rs"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="RS"/>

        <EditText
            android:id="@+id/i_rt"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="RT"/>

        <EditText
            android:id="@+id/i_offset"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:hint="OFFSET"/>


    </LinearLayout>


</LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/instruction_recycler_view"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"></android.support.v7.widget.RecyclerView>


</android.support.v7.widget.LinearLayoutCompat>
